<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tambah Mobil"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerBar"
        android:layout_above="@id/containerButton"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- STATUS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status Ketersediaan"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <Switch
                    android:id="@+id/switchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <EditText
                android:id="@+id/etNamaMobil"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Nama Mobil"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etMerek"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Merek"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Model / Tipe"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etPlatNomor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Plat Nomor"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etHargaSewa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Harga Sewa"
                android:inputType="number"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etTahun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Tahun"
                android:inputType="number"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etTransmisi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Transmisi"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Deskripsi"
                android:minLines="3"
                android:gravity="top"
                android:padding="12dp"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etTerakhirServis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Terakhir Servis"
                android:focusable="false"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/containerButton"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Tambah Mobil"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#2169E3"/>
    </LinearLayout>

</RelativeLayout>
