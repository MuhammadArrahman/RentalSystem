<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#F8F9FD"
            android:padding="10dp"
            android:src="@drawable/ic_car_side" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgCar"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamaMobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toyota Avanza"
                android:textColor="#101828"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvDetailSewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budi S. â€¢ 2 Hari"
                android:textColor="#5E6C84"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatusSewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status_green"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Berjalan"
                android:textColor="#2E7D32"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvJamSewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="14:00 WIB"
                android:textColor="#5E6C84"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>