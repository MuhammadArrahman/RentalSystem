<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile_placeholder"
                android:background="@drawable/bg_circle_grey" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivUser"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNamaUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budi Santoso"
                    android:textStyle="bold"
                    android:textColor="#101828"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tvNikUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIK: 32011234..."
                    android:textColor="#5E6C84"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_badge_orange"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="2 jam lalu"
                android:textColor="#EF6C00"
                android:textSize="10sp"/>
        </RelativeLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivKtp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_ktp"
            app:shapeAppearanceOverlay="@style/RoundedCornersImage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="8dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tanggal Lahir (OCR)" android:textColor="#5E6C84"/>
                <TextView android:id="@+id/tvTglLahir" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="12-05-1990" android:textColor="#101828" android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status Perkawinan" android:textColor="#5E6C84"/>
                <TextView android:id="@+id/tvStatusKawin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="Kawin" android:textColor="#101828" android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnTolak"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Tolak"
                android:textColor="#F04438"
                app:strokeColor="#F04438"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_close"
                app:iconTint="#F04438"/>
            <Button
                android:id="@+id/btnSetujui"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Setujui"
                android:backgroundTint="#1A56F0"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_check"
                app:iconTint="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>