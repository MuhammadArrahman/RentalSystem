<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp">

    <ImageView
        android:id="@+id/ivIconNotif"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_notifications"
        android:contentDescription="Icon Notifikasi" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvJudulNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Notifikasi"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvIsiNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Detail pesan notifikasi akan muncul di sini."
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvWaktuNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="10 Jan 2026, 09:00"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>